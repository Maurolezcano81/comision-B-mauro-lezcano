<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inicio</title>
  <link rel="icon" href="/images/ico.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/css/index.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class=" w-100 h-100 d-flex flex-column bg-dark text-light">

    <nav class="fs-2 text-uppercase p-4 w-100 d-flex justify-content-between align-items-center text-light border-bottom border-secondary">
          <h1 class=".navbar-brand p-0 nombre">Mauro<span class="nombreSpan">Lezcano</span></h1>
          <div class="pb-1">
              <button id="botonCrearPost" class="text-decoration-none px-3 rounded">Crear un Post</button>
          </div>
    </nav>

    <main class="w-100 d-flex flex-column justify-content-center align-items-center">

          <% Posteos.forEach((posteo, indice) => { %>
            <div class="main w-50 p-4 d-flex flex-column justify-content-center align-items-center border-end border-start border-bottom border-secondary gap-3">
              <div class="w-100 text-center">
                <div class="botones">
                    <!-- Guardo el id del post en el value del button -->
                    <button value="<%= posteo.id %>" class="borrar">
                      <span class="material-symbols-outlined">delete</span>
                    </button>
                  <form action="/actualizar/<%= posteo.id %>"><button value="<%= posteo.id %>" type="submit" class="editar">
                    <span class="material-symbols-outlined">
                  edit</span>
                </button></form>
                </div>
                <h5 class="text-uppercase  fs-3"><%= posteo.titulo%></h5> 
              </div>
              <div class="w-100 text-start"><p class="fs-5"><%= posteo.contenido %></p>
              </div>
                <div class="w-50 d-flex align-items-center justify-content-center">
                  <img class="w-100"  src="<%= posteo.enlace_imagen %>" alt="Imagen">
                </div>
                <div class="w-100">
                  <p class="fs-7 text-end">Creado: <%= posteo.fecha_creado %></p>
                </div>
          </div>
          <% }) %>
    </main>


 
  <script src="js/app.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
